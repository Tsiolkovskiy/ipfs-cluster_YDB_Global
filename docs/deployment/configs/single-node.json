{
  "cluster": {
    "secret": "REPLACE_WITH_GENERATED_SECRET",
    "leave_on_shutdown": false,
    "listen_multiaddress": "/ip4/0.0.0.0/tcp/9096",
    "state_sync_interval": "5m0s",
    "ipfs_sync_interval": "2m10s",
    "replication_factor_min": 1,
    "replication_factor_max": 1,
    "monitor_ping_interval": "15s"
  },
  "consensus": {
    "crdt": {
      "cluster_name": "single-node-zfs-cluster",
      "trusted_peers": ["*"],
      "batching": {
        "max_batch_size": 0,
        "max_batch_age": "0s"
      },
      "repair_interval": "1h0m0s"
    }
  },
  "api": {
    "ipfsproxy": {
      "listen_multiaddress": "/ip4/127.0.0.1/tcp/9095",
      "node_multiaddress": "/ip4/127.0.0.1/tcp/5001",
      "log_level": "info"
    },
    "restapi": {
      "http_listen_multiaddress": "/ip4/0.0.0.0/tcp/9094",
      "read_timeout": "30s",
      "read_header_timeout": "5s",
      "write_timeout": "60s",
      "idle_timeout": "120s"
    }
  },
  "ipfs_connector": {
    "zfshttp": {
      "node_multiaddress": "/ip4/127.0.0.1/tcp/5001",
      "connect_swarms_delay": "30s",
      "pin_timeout": "2m0s",
      "unpin_timeout": "3m0s",
      "zfs_config": {
        "hot_tier_pool": "hot-tier/ipfs-cluster",
        "warm_tier_pool": "warm-tier/ipfs-cluster",
        "cold_tier_pool": "cold-tier/ipfs-cluster",
        "sharding_strategy": "consistent_hash",
        "max_pins_per_shard": 1000000000,
        "compression_enabled": true,
        "deduplication_enabled": true,
        "snapshot_interval": "1h",
        "replication_factor": 1,
        "auto_tier_migration": true,
        "hot_tier_threshold": "1GB",
        "warm_tier_threshold": "10GB",
        "access_pattern_tracking": true,
        "performance_optimization": {
          "arc_max": "16G",
          "arc_min": "4G",
          "l2arc_write_max": "512M",
          "recordsize_optimization": true,
          "compression_algorithm": "lz4",
          "sync_mode": "standard",
          "prefetch": "metadata"
        }
      }
    }
  },
  "pin_tracker": {
    "stateless": {
      "max_pin_queue_size": 1000000,
      "concurrent_pins": 128
    }
  },
  "monitor": {
    "zfsmetrics": {
      "check_interval": "15s",
      "failure_threshold": 3,
      "metrics_collection_interval": "30s",
      "performance_optimization": true,
      "auto_tuning_enabled": true,
      "metrics_retention": "7d",
      "alert_thresholds": {
        "arc_hit_ratio_min": 0.85,
        "fragmentation_max": 0.3,
        "compression_ratio_min": 1.5,
        "disk_usage_max": 0.9
      }
    }
  },
  "allocator": {
    "balanced": {
      "allocate_by": ["tag:tier", "freespace", "latency"]
    }
  },
  "informer": {
    "disk": {
      "metric_ttl": "30s",
      "metric_type": "freespace"
    },
    "tags": {
      "metric_ttl": "30s",
      "tags": {
        "tier": "single-node",
        "zfs_pool": "auto-detect",
        "performance_class": "balanced"
      }
    }
  },
  "datastore": {
    "zfs": {
      "path": "/hot-tier/ipfs-cluster/metadata",
      "compression": "lz4",
      "sync": "standard",
      "no_sync": false
    }
  }
}